extends layout

    block content
        h2.page-header Edit
        p Please Edit using the form below
            if errors
                each error, i in errors
                    div.alert.alert-danger #{error.msg}
        form(action="/users/edit/:id", method="post")
            .form-group
            label Username
            input.form-control(name='username',type='text',
            placeholder='e.g emma')
            .form-group
            label Password
            input.form-control(name='password',type='password',
            placeholder='Enter Passoword')s
        
            input.btn.btn-primary(type='submit',name='submit',value='Edit')